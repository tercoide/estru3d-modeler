' Gambas class file

Public Sub spnPlants_Change()

    gcd.CurrPlant.PlantsTotal = spnPlants.Value
    gcd.CurrPlant.FloorsTotal.Resize(gcd.CurrPlant.PlantsTotal)
    gcd.CurrPlant.FloorsHeight.Resize(gcd.CurrPlant.PlantsTotal)

End

Public Sub TotalFloors_Change()

    Dim i As Integer = Val(Last.tag) - 1

    gcd.CurrPlant.FloorsTotal[i] = Last.Value

End

Public Sub FloorsHeight_MouseDown()

    Dim i As Integer = Val(Last.tag) - 1

    gcd.CurrPlant.FloorsHeight[i] = Last.Value

End
